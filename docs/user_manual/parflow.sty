%---------------------------------------------------------------------
% Environment: TitlePage
%---------------------------------------------------------------------

\newcommand{\TitlePage}{\begin{titlepage}%
\setlength{\parindent}{0in}\vspace*{1.0in}
}
\newcommand{\endTitlePage}{\vspace*{0.5in}\end{titlepage}}

%---------------------------------------------------------------------
% Command: Title
%---------------------------------------------------------------------

\newcommand{\Title}[1]{%
\makebox[\textwidth][l]{\LARGE\bf #1}
\rule{\textwidth}{2mm}
}

%---------------------------------------------------------------------
% Command: SubTitle
%---------------------------------------------------------------------

\newcommand{\SubTitle}[1]{\makebox[\textwidth][r]{#1}}

%---------------------------------------------------------------------
% Command: Author
%---------------------------------------------------------------------

\newcommand{\Author}[1]{%
\vfill
\noindent
% SGS - I got rid of the makebox because it was not splitting lines
% so we could not get everyone on the author line
%\makebox[\textwidth][l]{\large\bf #1}
{\large\bf #1}
\newline
\rule{\textwidth}{1mm}
}

%---------------------------------------------------------------------
% Environment: CopyrightPage
%---------------------------------------------------------------------

\newcommand{\CopyrightPage}{\begin{titlepage}%
\setlength{\parindent}{0in}\vspace*{3.0in}
}
\newcommand{\endCopyrightPage}{\end{titlepage}}

